@model WebApplication1.Models.Kategori


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="text-center text-primary mb-4">Kategori Ekle</h1>
                    <form asp-action="KategoriEkle">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="KategoriAdi" class="form-label">Kategori Adı</label>
                            <input asp-for="KategoriAdi" class="form-control" placeholder="Kategori adını girin" />
                            <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Admin Panel</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
