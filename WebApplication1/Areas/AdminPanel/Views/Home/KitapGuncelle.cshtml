@model WebApplication1.Areas.AdminPanel.Models.ViewModel.Kitap_VM

@{
    ViewData["Title"] = "KitapGuncelle";
}

<h1>KitapGuncelle</h1>

<h4>Kitap_VM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KitapGuncelle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KitapID" class="control-label"></label>
                <input asp-for="KitapID" class="form-control" readonly />
                <span asp-validation-for="KitapID" class="text-danger"></span>
            </div>       
            <div class="form-group">
                <label asp-for="KitapAdi" class="control-label"></label>
                <input asp-for="KitapAdi" class="form-control" />
                <span asp-validation-for="KitapAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasimYili" class="control-label"></label>
                <input asp-for="BasimYili" class="form-control" />
                <span asp-validation-for="BasimYili" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KitapOzeti" class="control-label"></label>
                <input asp-for="KitapOzeti" class="form-control" />
                <span asp-validation-for="KitapOzeti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KapakResmi" class="control-label"></label>
                <input asp-for="KapakResmi" type="file" class="form-control" />
                <span asp-validation-for="KapakResmi" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div>
                    @foreach (var kategori in ViewBag.Kategoriler)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="KategoriID" value="@kategori.Value" id="kategori_@kategori.Value">
                            <label class="form-check-label" for="kategori_@kategori.Value">
                                @kategori.Text
                            </label>
                        </div>
                    }
                </div>

                <span asp-validation-for="KategoriID" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="KategoriID" class="control-label"></label>
                <select asp-for="KategoriID" asp-items="ViewBag.Kategoriler" class="form-control"></select>
                <span asp-validation-for="KategoriID" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="YazarID" class="control-label"></label>
                <select asp-for="YazarID" asp-items="ViewBag.Yazarlar" class="form-control"></select>
                <span asp-validation-for="YazarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YayinEviID" class="control-label"></label>
                <select asp-for="YayinEviID" asp-items="ViewBag.YayinEvleri" class="form-control"></select>
                <span asp-validation-for="YayinEviID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>  
        <a asp-action="Index">Admin Panel</a>   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
