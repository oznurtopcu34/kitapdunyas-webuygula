@model WebApplication1.Models.Yazar
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="text-center text-primary mb-4">Yazar Ekle</h1>
                    <form asp-action="YazarEkle" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="YazarAdi" class="form-label">Yazar Adı</label>
                            <input asp-for="YazarAdi" class="form-control" placeholder="Yazar adını girin" />
                            <span asp-validation-for="YazarAdi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Biyografi" class="form-label">Biyografi</label>
                            <textarea asp-for="Biyografi" class="form-control" rows="5" placeholder="Yazarın biyografisini girin"></textarea>
                            <span asp-validation-for="Biyografi" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

